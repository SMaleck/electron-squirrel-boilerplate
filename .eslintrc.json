{
	"extends": [
		"airbnb-base"
	],
	"env": {
    "es6": true,
		"node": true,
		"mocha": true
	},
	"rules": {
    "arrow-body-style": [2, "always"],
    "new-cap": [2, {
      "capIsNewExceptions": ["Log"]
    }],
    "comma-dangle": 0,
    "no-prototype-builtins": 0,
    "consistent-return": 0,    
    "no-use-before-define": ["error", { "functions": false, "classes": true }],
    "curly": [2, "all"],
    "eqeqeq": [2, "allow-null"],
    "no-eq-null": 2,
    "no-param-reassign": 0,
    "max-len": [2, 150, 2, {
      "ignoreUrls": true,
      "ignoreComments": true
    }],
    "strict": [2, "global"],
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
    "func-names": 0
	},
  "globals": {
    "Promise": true,
    "Log": true
  },
  "settings": {
    "import/core-modules": [
      "electron"
    ]
  }
}